@{
    ViewData["Title"] = "Clientes";
}


<h2>Lista de clientes</h2>

<input type="text" id="txtfiltro" placeholder="Nombre, correo o teléfono" />
<button id="btnBuscar" class="btn btn-primary">Buscar</button>
<button id="createClienteButton" class="btn btn-success">Nuevo</button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tablaClientes">
    </tbody>
</table>


<!-- Modal-->
<div class="modal fade" id="createClienteModal" tabindex="-1" role="dialog" aria-labelledby="createClienteLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createClienteLabel">Crear Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- El contenido del modal se carga aquí -->
                <div>
                    <form id="createClienteForm">
                        <div class="form-group">
                            <label for="Nombre">Nombres <span class="error">*</span></label>
                            <input type="text" id="txtNombre" name="txtNombre" class="form-control error" required/>
                        </div>

                        <div class="form-group">
                            <label for="txtCorreo">Correo <span class="error">*</span></label>
                            <input type="text" id="txtCorreo" name="txtCorreo" class="form-control error" required />
                        </div>

                        <div class="form-group">
                            <label for="txtTelefono">Teléfono</label>
                            <input type="text" id="txtTelefono" name="txtTelefono" class="form-control error" />
                        </div>

                        <br />
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" id="saveClienteButton" class="btn btn-success">Guardar</button>
                <input type="button" value="Cerrar" class="btn btn-secondary" data-bs-dismiss="modal" />
            </div>

        </div>
    </div>
</div>

@section scripts{

<script src="~/js/clientes.js"></script>

}